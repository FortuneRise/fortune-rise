<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="fortune-rise-jpa" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/FortuneRiseDS</jta-data-source>

        <class>org.fortunerise.promotion.entities.Promotion</class>
        <class>org.fortunerise.promotion.entities.promotions.FreeBetPromotion</class>
        <class>org.fortunerise.promotion.entities.promotions.ExtraMoneyPromotion</class>
        <class>org.fortunerise.promotion.entities.UserLink</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="none"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>

    </persistence-unit>
</persistence>
